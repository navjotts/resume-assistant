html
    head
        title=title
        link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css')
        link(rel='stylesheet', href='/stylesheets/style.css')
        script(src='http://code.jquery.com/jquery-3.1.1.min.js')
        script(src='/js/Client.js')
    body
        div(class='container-fluid')
            div(class='center')
                div(class='title')
                    p=title
                div(class='navigation')
                    div(class='upload')
                        div(class='upload-resume')
                            form(id='uploadForm', enctype='multipart/form-data')
                                span(class='file-heading')='Resume'
                                input(id='resume-file', class='padding', type='file', accept='application/vnd.openxmlformats-officedocument.wordprocessingml.document', name='userFile')
                        div(class='upload-job')
                            form(id='uploadForm', enctype='multipart/form-data')
                                span(class='file-heading')='Job'
                                input(id='job-file', class='padding', type='file', accept='text/plain', name='userFile')
                    div()
                        button(class='padding', type='button', onclick='analyzeFiles()')='START ANALYZING'